<div id="layout_login">
<center><h1>Novo Usuario</h1></center>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %>Este usuario nao pode ser salvo!</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="margin-left:5px;">
	<%= f.label :username %>
        <%= f.text_field :username %>
	
  </div>

  <div class="field" style="margin-left:5px;">
	<%= f.label :password %>
        <%= f.password_field :password %>
  </div>
  
  <div class="actions" style="float:left">
	<%= f.submit %>
  </div>
 
<% end %>
</div>
